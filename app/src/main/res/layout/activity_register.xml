<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backaaa"
    tools:context=".Register">

    <LinearLayout
        android:id="@+id/regisLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--  Registration  -->
        <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:textColor="#FFFFFF"
                android:textIsSelectable="false"
                android:textSize="35sp"
                android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/btnKeyDown"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/keydown" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/FormDaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <!--  Fullname -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Fullname"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:orientation="horizontal">

                <!-- First Name  -->
                <EditText
                    android:id="@+id/txtFirstName"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"

                    android:layout_marginEnd="50dp"

                    android:hint="First Name"
                    android:textSize="14sp" />

                <!-- Last Name  -->
                <EditText
                    android:id="@+id/txtLastName"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:hint="Last Name"
                    android:textSize="14sp" />

     </LinearLayout>

            <!--  Label Username -->
            <TextView
                android:id="@+id/lbUsername"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="18sp" />

            <!--  Username Field -->
            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_marginEnd="50dp" />

<!--             SADNAWKUDHAIDWHAIOHDWLIDHALIWDJHAOLDJWALOIDJAWDOAIJDWOIDHAWDIAH -->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="18sp" />

            <!-- Password Field -->
            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_marginEnd="50dp"
                android:hint="*******"
                android:inputType="textPassword" />

          </LinearLayout>
          <!-- Password-->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!--  Label Confirmation Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmation Password"
                android:textSize="18sp" />

            <!-- Confirmation Password  Field -->
            <EditText
                android:id="@+id/txtCpassword"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_marginEnd="50dp"
                android:hint="*******"
                android:inputType="textPassword" />
            </LinearLayout>



          </LinearLayout>



            <!-- Phone number field -->
            <EditText
                android:id="@+id/txtPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_marginEnd="50dp"
                android:hint="Phone Number ( +62 )"
                android:inputType="phone" />

            <!-- Label Gender-->
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender  "
                android:textSize="20sp" />

            <!-- Radio Group Gender -->
            <RadioGroup
                android:id="@+id/rgid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/rdfemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40px"
                    android:text="Female"
                    android:textSize="18dp" />

            </RadioGroup>

            <CheckBox
                android:id="@+id/ckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" I agree to the DotaMarketPlace Term of Service "
                />

        </GridLayout>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:backgroundTint="#CF09F1"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="45px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="25dp"
       android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account?"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/goToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Here"
            android:textColor="#E91E63" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>